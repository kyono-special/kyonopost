<div class="card">
  <div class="card-header bg-info text-white">
      <h4><%= post.title %></h4>
  </div>
  <div class="card-body">
      <p class="card-text"><%= simple_format(post.content) %></p>
  </div>
  <div class="card-footer">
      <p class="text-right font-weight-bold mr-10"><%= post.name %></p>
  </div>
</div>